<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    android:paddingTop="30dp"
    android:background="#131313"


    tools:context=".Activity.LoadingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery Life"
            android:textColor="#fff"
            android:textSize="30sp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Free Ad"
            android:background="@drawable/custom_buttom"
            android:textColor="#fff"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <com.yanzhenjie.loading.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="350dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="300dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:id="@+id/cardViewMessage"
        app:cardBackgroundColor="@color/colorBackground"
        android:elevation="0dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analysing..."
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/messageLoading"
            android:layout_below="@+id/loading_view"
            android:layout_centerInParent="true"
            />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/starButton"
        android:layout_below="@+id/loading_view"
        android:background="@drawable/custom_buttom"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>